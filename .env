# =============================================
# Email Marketing Bot - Environment Variables
# =============================================

# ========= REQUIRED CORE SETTINGS =========
# Telegram Bot Token (from BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini AI API Key (for template generation and copywriting)
GEMINI_API_KEY=your_gemini_api_key_here

# MJML API Credentials (for MJML to HTML conversion)
MJML_APP_ID=your_mjml_app_id_here
MJML_SECRET=your_mjml_secret_here

# MongoDB Connection String (from MongoDB Atlas or your MongoDB provider)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/marketing_bot?retryWrites=true&w=majority

# ========= OPTIONAL SETTINGS WITH DEFAULTS =========
# MongoDB Database Name (default: marketing_bot)
MONGODB_DB_NAME=marketing_bot

# Test email for provider testing
TEST_EMAIL=test@example.com

# Default sender email and name
DEFAULT_SENDER_EMAIL=noreply@yourdomain.com
DEFAULT_SENDER_NAME=Your Marketing Team

# Performance settings
REQUESTS_PER_SECOND=2.0
MAX_RETRIES=3

# Directory paths (for file storage)
DATA_DIR=data
TEMPLATE_DIR=templates
BACKUP_DIR=backups

# ========= EMAIL PROVIDER CREDENTIALS (OPTIONAL) =========
# These will be automatically configured if provided

# Brevo (formerly SendinBlue)
BREVO_API_KEY=your_brevo_api_key_here

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain.com

# Mailjet
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_SECRET=your_mailjet_secret_here

# Gmail SMTP
SMTP_GMAIL_HOST=smtp.gmail.com
SMTP_GMAIL_PORT=587
SMTP_GMAIL_USER=your_email@gmail.com
SMTP_GMAIL_PASS=your_app_password_here

# Outlook SMTP
SMTP_OUTLOOK_HOST=smtp.office365.com
SMTP_OUTLOOK_PORT=587
SMTP_OUTLOOK_USER=your_email@outlook.com
SMTP_OUTLOOK_PASS=your_password_here

# ========= ADDITIONAL PROVIDERS (OPTIONAL) =========
# Elastic Email
ELASTIC_API_KEY=your_elastic_api_key_here

# Postmark
POSTMARK_API_KEY=your_postmark_api_key_here

# SparkPost
SPARKPOST_API_KEY=your_sparkpost_api_key_here

# MailerSend
MAILERSEND_API_KEY=your_mailersend_api_key_here